---
import { config } from "../../my.config";
---

<footer class="bg-black text-white py-6 text-center">
  <div class="flex justify-center gap-6 mb-4">
    <a
      href={config.BLUESKY_LINK}
      target="_blank"
      aria-label="BlueSky"
      class="text-gray-400 hover:text-white"
    >
      <i class="fa-brands fa-bluesky text-2xl"></i>
    </a>
    <a
      href={config.GITHUB_LINK}
      target="_blank"
      aria-label="GitHub"
      class="text-gray-400 hover:text-white"
    >
      <i class="fa-brands fa-github text-2xl"></i>
    </a>
    <a
      href={config.LINKEDIN_LINK}
      target="_blank"
      aria-label="LinkedIn"
      class="text-gray-400 hover:text-white"
    >
      <i class="fa-brands fa-linkedin text-2xl"></i>
    </a>
    <a
      href={config.XBOX_LINK}
      target="_blank"
      aria-label="Xbox"
      class="text-gray-400 hover:text-white"
    >
      <i class="fa-brands fa-xbox text-2xl"></i>
    </a>
  </div>
